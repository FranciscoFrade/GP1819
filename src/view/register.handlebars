<div class="tooltips">
        <img src="./images/help.jpg" with="25" height="25" alt="Ajuda" />
        <span class="tooltiptext">Nesta p&aacute;gina poder&aacute; registar-se na Quinta do Mi&atilde;o</span>
    </div>
<div id="register">
    <h1>Registar</h1>

    {{> flashMsgWarning}}

    <form id="registerForm" method="post" action="/register">
        <div class="form-group">
            <label>Nome</label>
            <input class="input-form" type="text" name="userName" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="input-form" type="email" name="email" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input id="input_pw" class="input-form" type="password" name="password" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger" id="span_pw"></span>
        </div>
        <div class="form-group">
            <label>Confirmar Password</label>
            <input id="input_conf_pw" class="input-form" type="password" name="confirmedPassword" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger" id="span_conf_pw"></span>
        </div>
        <div class="form-group">
            <label>NÃºmero de telefone</label>
            <input class="input-form" name="phoneNumber" type="number" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Data de Nascimento</label>
            <input class="input-form" type="date" name="birthDate" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div id="submit" class="form-group">
            <button type="submit" class="confirmationButton">Registar</button>
        </div>
    </form>
</div>