<div class="textDisplay">
    <div class="tooltips">
        <img src="./images/help.jpg" width="25" height="25" alt="Ajuda" />
        <span class="tooltiptext">Nesta página poderá consultar os dados de uma ficha de um movimento</span>
    </div>
    <div style="position:absolute; margin-left:10%">
        <h1>Movimento - {{movement.animal.name}}</h1>
        <h3>{{movement.date}}</h3>
        {{#ifGenderCond movement.animal.gender}}
            <img class="animal-image-male" src="{{movement.animal.photoLink}}" alt="Fotografia do animal"/>
        {{else}}
            <img class="animal-image-female" src="{{movement.animal.photoLink}}" alt="Fotografia do animal"/>
        {{/ifGenderCond}}
    </div>
    <dl class="dl-horizontal" style="position:absolute; left:30%; margin: 100px 30px">
        <h2>Informações do Animal</h2>
        <dt style="margin-right: 0.5em; display: inline; font-weight: bold;">Data de Nascimento</dt>
        <dd style="margin: 0; display: inline;">{{movement.animal.birthday}}</dd>
        <p></p>
        <dt style="margin-right: 0.5em; display: inline; font-weight: bold;">Género</dt>
        {{#ifGenderCond movement.animal.gender}}
            <dd style="margin: 0; display: inline;">Macho</dd>
        {{else}}
            <dd style="margin: 0; display: inline;">Fêmea</dd>
        {{/ifGenderCond}}
        <p></p>
        <dt style="margin-right: 0.5em; display: inline; font-weight: bold;">Vacinado</dt>
        {{#ifBoolCond movement.animal.vaccinated}}
            <dd style="margin: 0; display: inline;">Sim</dd>
        {{else}}
            <dd style="margin: 0; display: inline;">Não</dd>
        {{/ifBoolCond}}
        <p></p>
        <dt style="margin-right: 0.5em; display: inline; font-weight: bold;">Esterilizado</dt>
        {{#ifBoolCond movement.animal.sterilized}}
            <dd style="margin: 0; display: inline;">Sim</dd>
        {{else}}
            <dd style="margin: 0; display: inline;">Não</dd>
        {{/ifBoolCond}}
        <p></p>
        <dt style="margin-right: 0.5em; display: inline; font-weight: bold;">Tipo</dt>
        {{#ifBoolCond movement.animal.dog}}
            <dd style="margin: 0; display: inline;">Cão</dd>
        {{else}}
            <dd style="margin: 0; display: inline;">Gato</dd>
        {{/ifBoolCond}}
        
        <h2>Informações do Responsável</h2>
        <dt style="margin-right: 0.5em; display: inline; font-weight: bold;">Nome</dt>
        <dd style="margin: 0; display: inline;">{{movement.user.username}}</dd>
        <p></p>
        <dt style="margin-right: 0.5em; display: inline; font-weight: bold;">Contacto</dt>
        <dd style="margin: 0; display: inline;">{{movement.user.email}}</dd>
        <p></p>
    </dl>
</div>