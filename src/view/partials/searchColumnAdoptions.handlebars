<div id="searchUsers">
    <form id="searchUsersForm" method="GET" action="/{{route}}">
        <div class="form-group">
            <label>Adoptante:</label>
            <input class="search-input-form" type="text" name="adopter" />
        </div>
        <div class="form-group">
            <label>Animal:</label>
            <input class="search-input-form" type="text" name="animal" />
        </div>
        <div class="form-group">
            <label>Data de Adopção:</label>
            <input class="search-input-form" type="date" name="adoptionDate" />
        </div>
        <div id="submit" class="form-group" >
            <button type="submit" class="confirmationButton" id="searchSubmitButton">Pesquisar</button>
        </div>
    </form>
</div>